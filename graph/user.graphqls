scalar Int64

enum Role {
    ADMIN
    USER
}

# 权限验证
directive @AuthCheck(role: Role!) on MUTATION | QUERY | FIELD_DEFINITION


type User {
  address: ID!
  timestamp: Int64!
  isRoot: Boolean!
}

input LoginContent {
  address: String!
  timestamp: Int64!
}

extend type Mutation {
  """用户登陆接口"""
  loginAndBindRoot(input: LoginContent!,signature: String!): String!
}
